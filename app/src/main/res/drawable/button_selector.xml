<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#30000000"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px" android:right="3px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#c2185b"
                        android:endColor="#c2185b"
                        android:angle="270" />
                    <corners
                        android:radius="2dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#e91e63"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px" android:right="3px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:endColor="#e91e63"
                        android:startColor="#e91e63"
                        android:angle="270" />
                    <corners
                        android:radius="2dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
